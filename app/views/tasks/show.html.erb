<h1><%= @task.body %></h1>
<h2>Task Details </h2>
<br />
<!-- Display task details -->
<p><%= @task.details %></p>

<!-- Display if task is complete in plain english -->
<small>This task is <b><%=@task.complete ? 'completed' : 'not completed' %></b></small>
<br />
<small>This task is <b><%=@task.priority ? 'a priority' : 'not a priority' %></b></small>
<br />
<br />
<div class="container-fluid">
        <div class="btn-group" role="group" aria-label="Basic example">
                <%= button_to 'Return', list_path(@task.list_id), method: 'get',class: 'btn btn-primary' %>
                <%= button_to 'Edit Task', edit_task_path, method: 'get', class: 'btn btn-outline-secondary' %>
        </div>
</div>